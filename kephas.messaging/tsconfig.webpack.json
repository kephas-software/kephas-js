{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "noEmitHelpers": true,
      "importHelpers": true,
      "strictNullChecks": false,
      "lib": [
        "es2015",
        "dom"
      ],
      "baseUrl": "./src",
      "paths": {
        "@angular/*": [
          "../node_modules/@angular/*"
        ],
        "@kephas/*": [
          "../node_modules/@kephas/*"
        ]
      },
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": [
        "hammerjs",
        "node"
      ]
    },
    "exclude": [
      "node_modules",
      "dist",
      "src/**/*.spec.ts",
      "src/**/*.e2e.ts"
    ],
    "angularCompilerOptions": {
      "skipMetadataEmit": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
      "rewriteTsconfig": false
    }
  }
  