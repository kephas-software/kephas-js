{
  "name": "@kephas/core",
  "version": "0.4.0",
  "description": "Provides a common infrastructure for all the other Kephas Framework components: ambient services, dynamic reflection, composition, application management, and others.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "cross-env TS_NODE_PROJECT=\"tsconfig.webpack.json\" webpack & mocha",
    "build": "cross-env TS_NODE_PROJECT=\"tsconfig.webpack.json\" webpack",
    "lint": "npm run tslint \"src/**/*.ts\"",
    "tslint": "tslint \"src/**/*.ts\" --project tsconfig.json",
    "typedoc": "typedoc"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "reify"
    ],
    "spec": [
      "src/**/*.spec.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kephas-software/kephas-js/tree/master/kephas.core"
  },
  "keywords": [
    "kephas",
    "core"
  ],
  "author": {
    "name": "Kephas Software SRL"
  },
  "license": "MIT",
  "files": [
    "README.md",
    "dist/"
  ],
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "js-sha256": "0.9.0",
    "base64-js": "1.5.1"
  },
  "devDependencies": {
    "@types/base64-js": "^1.3.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.4",
    "@types/webpack": "^4.41.25",
    "chai": "^4.2.0",
    "codelyzer": "6.0.1",
    "cross-env": "7.0.2",
    "mocha": "^8.2.1",
    "path": "^0.12.7",
    "reify": "^0.20.12",
    "rxjs-tslint": "0.1.8",
    "ts-loader": "^8.0.11",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.1.3",
    "typescript": "4.1.2",
    "webpack": "^5.8.0",
    "webpack-cli": "^4.2.0",
    "webpack-dts-bundle": "^0.0.2"
  }
}
